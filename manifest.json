{
    "version": "0.0.2",
    "name": "cloudSkyMonster",
    "manifest_version": 2,
    "description": "多功能插件，说明书请看github https://github.com/scoful/cloudSkyMonster",
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "icons": {
        "16": "images/get_started16.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "contextMenus",
        "storage",
        "unlimitedStorage",// 据说是不受限制的存？
        "notifications",
        "<all_urls>"
    ],
    "content_security_policy": "script-src 'self' https://api.github.com; object-src 'self'",
    "browser_action": {
        "default_icon": "images/favicon.png",
        "default_title": "cloudSkyMonster",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/jquery-2.2.2.min.js",
                "js/contentscript.js"
            ],
            "css": [
                "css/custom.css"
            ],
            "run_at": "document_start"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "homepage_url": "https://github.com/scoful/cloudSkyMonster"
}